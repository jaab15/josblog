<table cellpadding=10 cellspacing=0 border=0>
  <tr>
    <th>title</th>

    <th></th>
    <th id="act1">action</th>

  </tr>

  <% if @nbrReq == nil || @nbrReq == 0 %>
        <% @nbrPage = 0 %>
        <p>There is any posts in the database </p>
  <% else %>
     <% @posts.each do |post| %>
       <tr>
         <td> <%= link_to post.title, post_path(post)%></td>
         <div>
           <td id="but2"><%= link_to 'Delete', post_path(post),
                         method: "delete", :confirm => "Really?"%></td>
        </div>
       </tr>
     <% end %>
  <% end %>
</table><br>

<% if @nbrPage > 1 %>
<%=    params[:page] %>

<%    for i in 1..@nbrPage do %>
<%        if  params[:query] != nil && params[:query] != ""  %>
<%            session[:query] = params[:query]  %>
<%            if params[:page].to_i != i.to_i  %>
<%=              link_to "#{i}", search_path({page: "#{i}"}) %> &nbsp
<%            else %>
<%=              params[i] %> &nbsp
<%            end %>
<%        else %>
<%            if params[:page].to_i != i.to_i  %>
<%=              link_to "#{i}", posts_path({page: "#{i}"}) %> &nbsp
<%            else %>
<%=              params[i] %> &nbsp
<%            end %>
<%        end %>
<%    end %>
<% else %>
<%    if  params[:query] != nil && params[:query] != ""  %>
<%        search_path({page: 1}) %>
<%    else %>
<%        posts_path({page: 1}) %>
<%    end %>
<% end %>
