<!DOCTYPE html>
<html>
  <head>
    <title>Josblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= link_to 'Home', root_path %>        &nbsp&nbsp
      <%= link_to 'About', about_path %>      &nbsp&nbsp
      <%= link_to 'New Post', new_post_path %>&nbsp&nbsp
      <%= link_to 'All', posts_path %>        &nbsp&nbsp

      <% if user_signed_in? %>
    <!-- see application controller -->
            Hello <%= current_user.first_name %> (
            <%= link_to 'Upd Sign in?', edit_user_path(current_user) %> )
            <%= link_to 'Sign Out', sessions_path, method: :delete,
              data: {confirm: "are you sure you want to log out?"}%>
    <% else%>
           <%= link_to 'Sign Up', new_user_path %>&nbsp&nbsp
           <%= link_to 'Sign In', new_session_path %>&nbsp&nbsp
           <%#= link_to 'Sign In With Twitter', sign_in_with_twitter_path %>&nbsp&nbsp

         <%#= link_to 'List of Tags', tags_path %>
    <% end %><br><br>

    <%= notice || alert %>

      <%= yield %>
  </body>
</html>
